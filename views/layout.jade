doctype html
html
    head
        title='#YouRock'
        meta(name='description', content='Publicly praise your friends when they are awesome.')
        meta(property='og:title', content='#YouRock: Publicly praise your friends when they are awesome.')
        meta(property='og:type', content='website')
        meta(property='og:image', content='/images/square.jpg')
        meta(property='og:site-name', content='#YouRock')
        meta(property='og:url', content='http://www.yourock.com')
        meta(name='twitter:card', value='summary')
        link(rel='stylesheet', href='/stylesheets/style.css')
        link(rel="stylesheet", type="text/css", href="https://fonts.googleapis.com/css?family=Lato:300,400,700|Source+Code+Pro:300,400,700")
        link(rel='shortcut icon', href='/images/favicon.ico')
    body(data-twttr-rendered='false')
        div.container
            div.header
                div.nav
                    span.headerText
                        a(href="#") Home
                    span.headerText
                        a(href="#activity") Activity
                    span.headerText
                        a(href="#rockers") Top Rockers
                    span.headerText
                        a(href="#corporate") Corporate

                div.headerRight
                    a(href="https://twitter.com/YouRockSite", class="twitter-follow-button", data-show-count="false", data-size="large", data-dnt="true") Follow @YouRockSite
                div.headerRight
                    span.headerText To join in, just follow us on twitter!&nbsp;
