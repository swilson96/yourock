div.user.tweet
    div(class="float text")
        a(href="https://twitter.com/#{user.screen_name}")
            img(class="profileImage", src="#{user.profile_image_url}")
    div.text
        p
            a(href="/#{user.screen_name}") #{user.name}
            |  (
            a(href="https://twitter.com/#{user.screen_name}") @#{user.screen_name}
            | )
        if (user.praiseCount != undefined)
            p Praises: #{user.praiseCount}, Praised: #{user.praisedCount}


